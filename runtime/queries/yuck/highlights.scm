; widgets
[
  "widget"
  "combo-box-text"
  "expander"
  "revealer"
  "checkbox"
  "color-button"
  "color-chooser"
  "scale"
  "progress"
  "input"
  "button"
  "image"
  "box"
  "overlay"
  "centerbox"
  "scroll"
  "eventbox"
  "label"
  "literal"
  "calendar"
  "transform"
  "circular-progress"
